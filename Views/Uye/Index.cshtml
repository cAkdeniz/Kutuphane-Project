@using KutuphaneProject.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>No</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>E-mail</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Fotoğraf</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Kitap Geçmişi</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Ad</td>
    <td>@item.Soyad</td>
    <td>@item.Email</td>
    <td>@item.KullaniciAd</td>
    <td>@item.Sifre</td>
    <td>@item.Fotograf</td>
    <td>@item.Telefon</td>
    <td>@item.Okul</td>
    <td>
        <a href="/Uye/KitapGecmis/@item.Id" class="btn btn-info" style="background-color:darkgreen;color:white">Detay</a>
    </td>
</tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa => Url.Action("Index",new { sayfa }))

