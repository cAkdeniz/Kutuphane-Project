@model List<KutuphaneProject.Models.Entity.TBLHAREKET>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}

<h2>Kitap Geçmişim</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TBLKITAP.Ad</td>
            <td>@Convert.ToDateTime(item.AlisTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.IadeTarih).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

