@model KutuphaneProject.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}

<h2>Profil Bilgilerim</h2>

@using (Html.BeginForm("GuncelleBilgilerim","Ogrenci",FormMethod.Post))
{
<table class="table table-hover" style="margin-top:30px">
    <tr>
        <td>
            <label style="font-weight:bolder">Kullanıcı Adı: </label>
            @HttpContext.Current.User.Identity.Name
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.Sifre)
            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.Ad)
            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.Soyad)
            @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.Fotograf)
            @Html.TextBoxFor(x => x.Fotograf, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.Okul)
            @Html.TextBoxFor(x => x.Okul, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-warning">Bilgilerimi Güncelle</button>
        </td>
    </tr>
</table>
}
